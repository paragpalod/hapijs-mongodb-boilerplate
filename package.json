{
  "name": "hapijsBoilerplate",
  "version": "1.0.0",
  "description": "HapiJs-MongoDb-Boilerplate",
  "main": "server",
  "scripts": {
    "start": "node server",
    "dev": "nodemon server",
    "lint": "eslint server/* --ext .js --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paragpalod/nodejs-hapijs-mongodb-api.git"
  },
  "author": "Parag Palod",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/paragpalod/nodejs-hapijs-mongodb-api/issues"
  },
  "homepage": "https://github.com/paragpalod/nodejs-hapijs-mongodb-api#readme",
  "keywords": [
    "hapijs",
    "hapijs boilerplate",
    "nodejs boilerplate",
    "mongodb boilerplate"
  ],
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "standard"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2019
    },
    "rules": {
      "no-throw-literal": 0,
      "no-trailing-spaces": [
        "error",
        {
          "skipBlankLines": true,
          "ignoreComments": true
        }
      ],
      "semi": [
        "off",
        "always"
      ],
      "no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "args": "after-used"
        }
      ]
    }
  },
  "nodemonConfig": {
    "events": {
      "restart": "npm run lint"
    }
  },
  "dependencies": {
    "@hapi/basic": "^6.0.0",
    "@hapi/glue": "^7.0.0",
    "@hapi/good": "^8.2.0",
    "@hapi/good-console": "^8.1.0",
    "@hapi/good-squeeze": "^5.2.0",
    "@hapi/hapi": "^18.0.0",
    "@hapi/inert": "^5.2.1",
    "dotenv": "^8.2.0",
    "hapi-swagger": "^10.0.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.4",
    "multi-factor-authentication": "^1.0.1",
    "nodemailer": "^6.4.6",
    "vision": "^5.4.4",
    "white-out": "^2.0.2"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "nodemon": "^1.19.1"
  }
}
