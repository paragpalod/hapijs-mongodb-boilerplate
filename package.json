{
  "name": "nodehapimongo",
  "version": "1.0.0",
  "description": "Javascript-NodeJs-HapiJs-MongoDb-Api",
  "main": "server",
  "scripts": {
    "start": "node server",
    "dev": "nodemon server & eslint server server/**/*",
    "lint": "eslint server server/**/*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paragpalod/nodejs-hapijs-mongodb-api.git"
  },
  "author": "Parag Palod",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/paragpalod/nodejs-hapijs-mongodb-api/issues"
  },
  "homepage": "https://github.com/paragpalod/nodejs-hapijs-mongodb-api#readme",
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "standard"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2019
    },
    "rules": {
      "no-trailing-spaces": [
        "error",
        {
          "skipBlankLines": true,
          "ignoreComments": true
        }
      ],
      "semi": [
        "off",
        "always"
      ],
      "no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "args": "all"
        }
      ]
    }
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "nodemon": "^2.0.3"
  }
}
